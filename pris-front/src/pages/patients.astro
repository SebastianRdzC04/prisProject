---

import Layout from "../layouts/Layout.astro";
import PatientsContent from "../components/react-components/pages/PatientsContent";
import DateSpan from "../components/astro-components/DateSpan.astro";

---

<Layout title="Pacientes">

    <main class="border mt-24 m-7 p-5 rounded-md border-gray-800">
        <div class="flex flex-wrap justify-between">
            <div>
                <h2 class="text-2xl">Agenda de Pacientes</h2>
                <p>Gestiona tus pacientes. Chance ya se murio alguno</p>
            </div>
            <div class="flex text-center items-center content-center ">
                <DateSpan/>
            </div>
        </div>

        <div>
            <PatientsContent client:load />
        </div>

    </main>

</Layout>