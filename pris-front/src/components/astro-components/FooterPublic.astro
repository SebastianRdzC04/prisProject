  <!-- Scroll to top button -->
  <button 
    id="scrollToTop"
    aria-label="Volver arriba"
    class="fixed bottom-6 right-6 p-2 rounded-full bg-white/20 backdrop-blur-sm text-white hover:bg-white/30 transition-all shadow-lg opacity-0 invisible"
  >
