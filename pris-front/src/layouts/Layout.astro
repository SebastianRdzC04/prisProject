---
// Corregir la ruta de importación
import '../styles/global.css';
import Header from "../components/astro-components/Header.astro";
import SideBar from "../components/astro-components/SideBar.astro";


interface Props {
	title: string;
}

const { title } = Astro.props;

---
<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width" />
	<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	<meta name="generator" content={Astro.generator} />
	<title>{title}</title>
</head>
<body class="bg-[#faf9f5]">
<Header/>
<div class="flex pt-2">
	<SideBar/>
	<main class="ml-56 flex-1 p-6">
		<slot />
	</main>
</div>

<script>
	// Verificar si existe un token en localStorage
	const token = localStorage.getItem('token');



	// Si no hay token, redirigir a la página de autenticación
	if (!token) {
		window.location.href = '/authenticate';
	}
</script>
</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

	body {
		display: flex;
		flex-direction: column;
	}

	.flex {
		display: flex;
		flex: 1;
	}
</style>