---
import '../styles/global.css'
import HeaderPublic from "../components/astro-components/HeaderPublic.astro";
import FooterPublic from "../components/astro-components/FooterPublic.astro";

interface Props {
    title: string;
}

const { title } = Astro.props;

---

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
</head>
<body class="bg-[#faf9f5] flex flex-col min-h-screen">
    <HeaderPublic/>
    <div class="pt-20 flex-grow">
        <slot />
    </div>
    <FooterPublic />
</body>
</html>

<style>
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
    }
</style>